{
  "version": 3,
  "configurePresets": [
    {
      "name": "Base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/Build/${presetName}"
    },
    {
      "name": "Clang",
      "inherits": "Base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang$env{clang_compiler_version}",
        "CMAKE_CXX_COMPILER": "clang++$env{clang_compiler_version}"
      }
    },
    {
      "name": "GCC",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "Base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc$env{gcc_compiler_version}",
        "CMAKE_CXX_COMPILER": "g++$env{gcc_compiler_version}"
      }
    },
    {
      "name": "MSVC",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "Base",
      "generator": "Visual Studio 17 2022"
    }
  ],
  "buildPresets": [
    {
      "name": "Base",
      "hidden": true,
      "verbose": true
    },
    {
      "name": "Debug",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Release"
    },
    {
      "name": "Clang Debug",
      "inherits": "Debug",
      "configurePreset": "Clang"
    },
    {
      "name": "Clang Release",
      "inherits": "Release",
      "configurePreset": "Clang"
    },
    {
      "name": "GCC Debug",
      "inherits": "Debug",
      "configurePreset": "GCC"
    },
    {
      "name": "GCC Release",
      "inherits": "Release",
      "configurePreset": "GCC"
    },
    {
      "name": "MSVC Debug",
      "inherits": "Debug",
      "configurePreset": "MSVC"
    },
    {
      "name": "MSVC Release",
      "inherits": "Release",
      "configurePreset": "MSVC"
    }
  ],
  "testPresets": [
    {
      "name": "Base",
      "hidden": true,
      "output": {
        "verbosity": "verbose"
      }
    },
    {
      "name": "Debug",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Release"
    },
    {
      "name": "Clang Debug",
      "inherits": "Debug",
      "configurePreset": "Clang"
    },
    {
      "name": "Clang Release",
      "inherits": "Release",
      "configurePreset": "Clang"
    },
    {
      "name": "GCC Debug",
      "inherits": "Debug",
      "configurePreset": "GCC"
    },
    {
      "name": "GCC Release",
      "inherits": "Release",
      "configurePreset": "GCC"
    },
    {
      "name": "MSVC Debug",
      "inherits": "Debug",
      "configurePreset": "MSVC"
    },
    {
      "name": "MSVC Release",
      "inherits": "Release",
      "configurePreset": "MSVC"
    }
  ]
}